window {
    width: 20%;
    border: 2px;
    border-radius: 25px;
    background-color: @bg;
}

element {
    padding: 30 10;
    text-color: @fg-alt;
    border-radius: 25px;
    background-color: @bg-alt;
}

element-selected {
    text-color: @fg;
}

element-text {
    background-color: inherit;
    text-color: inherit;
    text-align: center;
    vertical-align: 0.5;
    font: "JetBrainsMono Nerd 24";
}

element-icon {
    size: 50;
}

entry {
    background-color: @bg-alt;
    padding: 32;
    text-color: @fg;
}

inputbar{
    children: [prompt, entry];
    enabled: false;
}

prompt {
    background-color: @bg;
    padding: 12;
    text-color: @fg;
    font: "Hack Bold 10";
}

listview {
    lines: 1;
    columns: 4;
    background-color: @bg;    
}

element.selected {
    background-color: @bg;
    border: 4px;
    border-color: @bg-alt;
    text-color:       @fg;
}
