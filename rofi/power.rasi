configuration {
    display-drun: "App";
    display-window: "Win";
    drun-display-format: "{icon} {name}";
    font: "JetBrainsMono Nerd 12";
    modi: "window,drun,run";
    show-icons: false;
    icon-theme: "Papirus";
}

