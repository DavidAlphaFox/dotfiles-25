[module/pulseaudio]
type = internal/pulseaudio


format-volume-prefix = %{T2}    %{T-} 
format-volume-prefix-foreground = ${color.fg0}
format-volume-prefix-background = ${color.bg0}
format-volume = <label-volume>

label-volume = %percentage%%
label-volume-background = ${color.bg0}

label-muted = %{T2} %{T-} 0%
label-muted-foreground = ${color.disabled}
label-muted-background = ${color.bg0}



[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %d / %m / %Y, %H:%M.%S

label = %date%
label-background = ${color.bg2}
label-foreground = #ffffff ;${color.fg0}



