configuration {
    display-drun: " App";
    display-window: " Win";
    display-run: " Run";
    drun-display-format: "{icon} {name}";
    font: "Hack Regular 10";
    modi: "drun,window,run";
    show-icons: true;
    icon-theme: "Papirus";
}

